<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/myRectangleView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:text="@string/box_1"
            android:paddingTop="60dp"
            app:layout_constraintEnd_toStartOf="@+id/myRectangleView2" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/myRectangleView3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp" android:layout_marginEnd="12dp"/>

    <TextView
            android:id="@+id/myRectangleView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:text="@string/box_2"
            android:paddingTop="60dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintStart_toEndOf="@+id/myRectangleView1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/myRectangleView4"
            app:layout_constraintTop_toTopOf="parent"

    />
    <TextView
            android:id="@+id/myRectangleView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle"
            android:textAlignment="center"
            android:text="@string/box_3"
            android:paddingTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/myRectangleView1"
            app:layout_constraintEnd_toStartOf="@+id/myRectangleView4" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/myRectangleView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp" android:layout_marginEnd="12dp"
    />
    <TextView
            android:id="@+id/myRectangleView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle"
            android:textAlignment="center"
            android:text="@string/box_4"
            android:paddingTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/myRectangleView2"
            app:layout_constraintStart_toEndOf="@+id/myRectangleView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/myRectangleView6"
            android:layout_marginEnd="6dp"/>
    <TextView
            android:id="@+id/myRectangleView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle"
            android:textAlignment="center"
            android:text="@string/box_1"
            android:paddingTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/myRectangleView3"
            app:layout_constraintEnd_toStartOf="@+id/myRectangleView6" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12dp"/>
    <TextView
            android:id="@+id/myRectangleView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle"
            android:textAlignment="center"
            android:text="@string/box_6"
            android:paddingTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/myRectangleView4"
            app:layout_constraintStart_toEndOf="@+id/myRectangleView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="6dp"/>



</android.support.constraint.ConstraintLayout>